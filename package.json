{
  "name": "element-plus-kit",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "run-p \"dev:packages\" \"dev:playground\"",
    "dev:packages": "pnpm --filter \"./packages/*\" dev",
    "dev:playground": "pnpm --filter \"./playground\" dev",
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "build": "run-p type-check build:packages",
    "type-check": "vue-tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "eslint:inspect": "eslint-config-inspector --config ./eslint.config.js",
    "check:branch": "node scripts/check-branch.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm run check:branch && changeset publish",
    "version": "pnpm run check:branch && pnpm build && pnpm changeset:version",
    "release": "pnpm run check:branch && pnpm build && pnpm changeset:publish",
    "publish:patch": "pnpm run check:branch && run-s publish:core:patch publish:form:patch publish:kit:patch",
    "publish:core:patch": "pnpm --filter \"./packages/core\" publish:patch",
    "publish:form:patch": "pnpm --filter \"./packages/form\" publish:patch",
    "publish:kit:patch": "pnpm --filter \"./packages/kit\" publish:patch",
    "publish:minor": "pnpm run check:branch && run-s publish:core:minor publish:form:minor publish:kit:minor",
    "publish:core:minor": "pnpm --filter \"./packages/core\" publish:minor",
    "publish:form:minor": "pnpm --filter \"./packages/form\" publish:minor",
    "publish:kit:minor": "pnpm --filter \"./packages/kit\" publish:minor",
    "publish:major": "pnpm run check:branch && run-s publish:core:major publish:form:major publish:kit:major",
    "publish:core:major": "pnpm --filter \"./packages/core\" publish:major",
    "publish:form:major": "pnpm --filter \"./packages/form\" publish:major",
    "publish:kit:major": "pnpm --filter \"./packages/kit\" publish:major",
    "docs:dev": "pnpm --filter \"./docs\" dev",
    "docs:build": "pnpm --filter \"./docs\" build",
    "docs:preview": "pnpm --filter \"./docs\" preview"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/config-inspector": "^1.3.0",
    "@iswangh/commitlint-config": "^0.1.3",
    "@iswangh/eslint-config": "^0.1.7",
    "@tsconfig/node22": "^22.0.3",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "sass": "^1.94.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.9",
    "vue-tsc": "^3.1.3"
  },
  "volta": {
    "node": "25.1.0"
  }
}
