{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "packages/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.config.ts",
    "**/*.config.js",
    "scripts"
  ]
}
