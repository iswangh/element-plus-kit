{
  "extends": "../tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@iswangh/element-plus-kit/form": ["../packages/form"],
      "@iswangh/element-plus-kit": ["../packages/kit"],
      "@iswangh/element-plus-kit/core": ["../packages/core"]
    },
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
