{
  // 继承根目录的基础 TypeScript 配置
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    // 启用复合项目模式，支持 TypeScript Project References
    "composite": true,
    // 增量编译信息文件路径
    "tsBuildInfoFile": "../../node_modules/.tmp/packages-kit.tsbuildinfo",
    // 基础路径：当前包目录
    "baseUrl": ".",
    // 根目录：src 目录
    "rootDir": "./src",
    // 路径别名：清空继承的 paths
    "paths": {},
    // 生成类型声明文件（.d.ts）
    "declaration": true,
    // 生成类型声明文件的 source map
    "declarationMap": true,
    // 允许输出文件（构建时需要）
    "noEmit": false,
    // 输出目录：dist
    "outDir": "./dist"
  },
  // 项目引用：依赖 form 包（通过 TypeScript Project References 管理类型依赖）
  "references": [
    {
      "path": "../form",
      // 不前置输出：kit 包不包含 form 包的代码
      "prepend": false
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
