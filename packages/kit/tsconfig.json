{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/packages-kit.tsbuildinfo",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "rootDir": "./src",
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../form",
      "prepend": false
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
