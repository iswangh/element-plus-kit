{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/packages-kit.tsbuildinfo",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@/core": ["../../core/src/index.ts"],
      "@/form": ["../../form/src/index.ts"],
      "@/kit": ["./src/index.ts"]
    },
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist"
  },
  "references": [
    {
      "path": "../form",
      "prepend": false
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
