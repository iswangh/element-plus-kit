{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "../../node_modules/.tmp/packages-core.tsbuildinfo",
    "lib": ["ES2022", "DOM"],
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "paths": {},
    "resolvePackageJsonExports": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
